@model IEnumerable<ProjetoCinema.Domain.Model.Sala>

<div class="content-body">
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Sala</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lista de Salas</h4>
                        <div id="idGridSala">
                            @Html.Partial("_GridSala", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>

<!-- Top Modal Incluir/Editar-->
<div class="modal fade" id="modal-sala" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div id="modalSala"></div>
    </div>
</div>
<!-- END Top Modal -->

@section Scripts{
    <script src="~/js/sala/sala.js" asp-append-version="true"></script>
}
